pipeline
{
   agent {
        label 'slave'
        } 
    stages
    {
        stage('checkin fron git'){
            steps
            {
                git branch: 'testbranch', url: 'https://github.com/saddamkafil/maven.git'
            }
        }
         stage(" BUILD using maven"){
            steps{
            script {
                def mvnhome = tool name: 'M2_HOME', type: 'maven'
                  sh "${mvnhome}/bin/mvn --version"
                  sh "${mvnhome}/bin/mvn clean package"
                }
                }
    }
        stage("docker tomcat")
        {
            steps
            {
                sh 'sudo mv /home/ec2-user/workspace/sadam/server/target/server.jar /home/ec2-user/workspace/sadam/server.jar'
                sh 'sudo ls -l'
                sh 'pwd'
                sh 'sudo docker build -t saddamka:1.0 .'
                sh 'sudo docker run -it -d -p 8080:8080 --name tomcat saddamka:1.0 /bin/bash'
                sh 'sudo docker exec -it tomcat /bin/bash'
                sh 'sudo tomcat --version'
                
            }
        }
}
}
