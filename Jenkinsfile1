pipeline
{
   agent {
        label 'slave'
        } 
    stages
    {
        stage('checkin fron git'){
            steps
            {
                git branch: 'testbranch', url: 'https://github.com/saddamkafil/maven.git'
            }
        }
         stage(" BUILD using maven"){
            steps{
            script {
                def mvnhome = tool name: 'M2_HOME', type: 'maven'
                  sh "${mvnhome}/bin/mvn --version"
                  sh "${mvnhome}/bin/mvn clean package"
                }
                }
    }
        stage("check tomcat")
        {
            steps
            {
                sh 'sudo tomcat --version'
            }
        }
}
}
